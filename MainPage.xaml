<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:RhythmYardstick"
             x:Class="RhythmYardstick.MainPage">
    
    <ContentPage.Resources>
        <drawable:RhythmGraphics x:Key="rhythmDrawable" />
        <drawable:YardstickGraphics x:Key="yardstickDrawable" />
    </ContentPage.Resources>
    
    <VerticalStackLayout x:Name="layout">
        <GraphicsView Drawable="{StaticResource yardstickDrawable}" HorizontalOptions="Start"
                      HeightRequest="600"
                      WidthRequest="900" />
        <GraphicsView Drawable="{StaticResource rhythmDrawable}" HorizontalOptions="Start"
                      HeightRequest="200"
                      WidthRequest="700" />
        <Button Text="Start" Clicked="OnStartButtonClicked" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
